div(style="display: flex;")
    .column
        .ncg-btn-group
            .btn-group.btn-group-justified
                .btn-group
                    button#housecup-pickban-show.btn.btn-xs.btn-success(type='button' aria-label="Left Align")
                        span.glyphicon.glyphicon-user(aria-hidden="true") TOGGLE PICKBAN
                .btn-group
                    button#housecup-pickban-reset.btn.btn-xs.btn-danger(type='button' aria-label="Left Align")
                        span.glyphicon.glyphicon-user(aria-hidden="true")  RESET

                .btn-group
                    button#housecup-pickban-start.btn.btn-xs.btn-success(type='button' aria-label="Left Align")
                        span.glyphicon.glyphicon-user(aria-hidden="true")  START PHASE

select#Phase.form-control(data-player=2)
    option(value="1") Phase 1 - Ban 1 opponent deck
    option(value="2") Phase 2 - Pick 2 decks
    option(value="3") Phase 3 - Ban 2 opponent decks
    option(value="4") Phase 4 - Pick 2 decks
    option(value="5") Phase 5 - Ban 1 opponent deck

.legend 1 Druid, 2 Hunter, 3 Mage, 4 Paladin, 5 Priest, 6 Rogue, <br>7 Shaman, 8 Warlock, 9 Warrior

